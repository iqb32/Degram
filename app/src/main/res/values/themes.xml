<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Degram" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/smokey_white</item>
        <!-- Customize your theme here. -->
        <item name="android:windowActivityTransitions">true</item>

        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@transition/fade</item>
        <item name="android:windowExitTransition">@transition/fade</item>
    </style>

    <style name="Heading">
        <item name="android:textColor">@color/blueish_black</item>
        <item name="fontFamily">@font/bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Body">
        <item name="android:textColor">@color/blueish_black</item>
        <item name="fontFamily">@font/regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Score">
        <item name="android:textColor">@color/smokey_white</item>
        <item name="fontFamily">@font/bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:background">@drawable/ic_hexa</item>
    </style>

    <style name="bottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_dialog</item>
        <item name="fontFamily">@font/regular</item>
    </style>


</resources>